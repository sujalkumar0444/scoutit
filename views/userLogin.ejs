<%- include('partials/header') %>

<div class="container mt-5" style="background-color:  #d7d7d7; padding: 20px; border-radius: 10px;">
  <h1 class="text-center mb-4">Login</h1>
  <% if (locals.message){ %>
    <div class="alert alert-danger" role="alert">
      <%= message %>
    </div>
    <script>
      // Hide the alert after 7 seconds
      setTimeout(() => {
        const alert = document.querySelector('.alert').style.display = 'none';
      }, 7000);
    </script>
  <% } %>
  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/user/login" method="POST">
            <div class="form-group">
              <label for="email" class="text-dark">Email</label>
              <input type="email" class="form-control" name="username" required>
            </div>
            <div class="form-group">
              <label for="password" class="text-dark">Password</label>
              <input type="password" class="form-control" name="password" minlength="6" required>
            </div>
            <button type="submit" class="btn btn-dark">Login</button>
          </form>

        </div>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="card">
        <div class="card-body">
          <a class="btn btn-block btn-google text-light" href="/auth/google" role="button">
            <i class="fab fa-google mr-2"></i>
            Sign In with Google
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
