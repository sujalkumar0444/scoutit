<!-- admin-dashboard.ejs -->
<%- include('partials/header') %>
<h1>Admin Dashboard</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Email</th>
    <th>Action</th>
  </tr>
  <% users.forEach(user => { %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.email %></td>
      <td>
        <!-- Add a form for each user with a delete button -->
        <form action="/admin/delete" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this user?');">
          <input type="hidden" name="userId" value="<%= user.id %>">
          <button type="submit">Delete</button>
        </form>
      </td>
    </tr>
  <% }); %>
</table>
<a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
<!-- Add any additional styling or layout as needed -->

<!-- Add JavaScript for the confirm delete prompt -->
<script>
  function confirmDelete() {
    return confirm('Are you sure you want to delete this user?');
  }
</script>
<%- include('partials/footer') %>